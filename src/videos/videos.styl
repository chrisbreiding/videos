video-thumb-height = 90px;
video-thumb-width = 160px;

.video {
  padding: 0.6em 1.6em;
  position: relative;

  .contents {
    display: flex;
  }

  .video-sort-handle {
    cursor: grab;
    left: 0;
    padding: 0.6em;
    position: absolute;
    top: 0;
    visibility: hidden;

    .icon {
      color: darken(light-color, 30%);

      &:first-child {
        margin-right: 0.16em;
      }
    }
  }

  .videos-is-custom &:hover .video-sort-handle,
  &.videos-sort-helper .video-sort-handle {
    visibility: visible;
  }

  &.videos-sort-helper {
    background: light-color;
    border-radius: 3px;
    box-shadow: 0 0 0.5em rgba(0, 0, 0, 0.2);
  }

  aside {
    flex-shrink: 0;
    margin-right: 1em;
    width: video-thumb-width;
  }

  main {
    flex-grow: 2;
  }

  h4 {
    font-size: 1.1em;
    margin-top: 0;
  }

  .pub-date {
    float: right;
    margin: 0.6em 0;
    text-align: right;

    .formatted {
      color: #a4a4a4;
      font-size: 0.8em;
    }
  }

  .duration {
    background: #212121;
    border-radius: 3px;
    color: #f8f8f8;
    float: left;
    margin-right: 1em;
    padding: 0.4em;

    i {
      font-size: 1.3em;
    }
  }

  .video-marker {
    cursor: pointer;
    display: none;
    margin-bottom: 0.5em;

    &:before {
      border-bottom: solid 1px primary-color;
      content: '';
      display: block;
      flex-grow: 2;
      height: 0.65em;
    }

    .remove-video-marker {
      color: primary-color;
      flex-grow: 0;
      margin-left: 5px;
    }
  }

  &.is-marked .video-marker {
    display: flex;
  }
}

.play-video {
  background: none;
  border: none;
  border-radius: 0;
  display: block;
  height: video-thumb-height;
  overflow: hidden;
  padding: 0;
  position: relative;
  text-decoration: none;
  width: video-thumb-width;

  &:link,
  &:visited {
    color: #FFF;
  }

  img {
    display: block;
    height: video-thumb-height;
    width: video-thumb-width;
  }

  .channel {
    bottom: 0;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
    height: (video-thumb-height / 2);
    left: 0;
    position: absolute;
    width: (video-thumb-height / 2);
  }

  i {
    color: #FFF;
    bottom: 0;
    font-size: 4em;
    left: 0;
    line-height: video-thumb-height;
    position: absolute;
    right: 0;
    top: 0;
    text-align: center;
    visibility: hidden;
  }

  &:hover,
  &:focus {

    i {
      background: rgba(0,0,0,0.5);
      visibility: visible;
    }
  }
}
